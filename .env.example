# NexusAI Environment Variables
# Copy this file to .env and fill in your API keys

# OpenAI API Key
VITE_OPENAI_API_KEY=your_openai_api_key_here

# Google AI API Key
VITE_GOOGLE_API_KEY=your_google_api_key_here

# Anthropic API Key
VITE_ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Mistral AI API Key
VITE_MISTRAL_API_KEY=your_mistral_api_key_here

# Groq API Key
VITE_GROQ_API_KEY=your_groq_api_key_here

# HuggingFace API Key
VITE_HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Optional: Custom OpenAI-compatible API base URL
# VITE_OPENAI_BASE_URL=your_custom_api_base_url

# Database Configuration
# For Turso (cloud)
# DATABASE_URL=libsql://your-database.turso.io
# DATABASE_AUTH_TOKEN=your-auth-token

# For local development
DATABASE_URL=file:nexusai.db

# Application Settings
VITE_APP_NAME="NexusAI"
VITE_APP_VERSION="1.0.0"
VITE_MAX_FILE_SIZE_MB=25
VITE_ENABLE_ANALYTICS=false
VITE_API_TIMEOUT_MS=30000

# Server Settings
PORT=3001

# Authentication
JWT_SECRET=your-jwt-secret-key-change-me-in-production
JWT_EXPIRY=7d

# Security
NODE_ENV=development
ENABLE_HTTPS=false
COOKIE_SECRET=your-cookie-secret-key-change-me-in-production